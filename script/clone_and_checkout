#!/bin/bash

main() {
    clone_and_checkout $1 $2 $3
}


clone_and_checkout() {
    local __src_repo=$1
    local __dst=$2
    local __ckeckout=$3

    echo " "
    echo -e "\033[34m $__dst \033[0m"
    echo " "
    
    if [ ! -d $__dst ]
    then
      git clone $__src_repo $__dst
      cd $__dst
    else
      cd $__dst
      git clean -f
      git fetch origin
    fi
    
    git checkout $__ckeckout
    cd -
}

main "$@"